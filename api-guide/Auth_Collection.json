          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/devices",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "devices"
              ]
            },
            "description": "회사의 모든 디바이스를 조회합니다."
          }
        },
        {
          "name": "공간별 디바이스 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/devices/space/{{spaceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "devices",
                "space",
                "{{spaceId}}"
              ]
