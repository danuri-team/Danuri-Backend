  },
  "item": [
    {
      "name": "관리자 인증",
      "item": [
        {
          "name": "로그인",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/auth/sign-in",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "auth",
                "sign-in"
              ]
            },
            "description": "관리자 계정으로 로그인합니다."
          }
        },
        {
          "name": "회원가입",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"관리자\",\n  \"phone\": \"010-1234-5678\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/auth/sign-up",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "auth",
                "sign-up"
              ]
            },
            "description": "새로운 관리자 계정을 생성합니다."
          }
        },
        {
          "name": "토큰 갱신",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "auth",
                "refresh"
              ]
            },
            "description": "리프레시 토큰을 사용하여 새로운 액세스 토큰을 발급받습니다."
          }
        },
        {
          "name": "관리자 정보 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/auth/info",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "auth",
                "info"
              ]
            },
            "description": "현재 로그인한 관리자의 정보를 조회합니다."
          }
        }
      ]
    },
    {
      "name": "디바이스 인증",
      "item": [
        {
          "name": "디바이스 인증",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"device-123\",\n  \"secretKey\": \"secret-456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/device",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "device"
              ]
