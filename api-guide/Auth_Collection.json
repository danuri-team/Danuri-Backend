            "description": "특정 공간에 설치된 모든 디바이스를 조회합니다."
          }
        },
        {
          "name": "디바이스 정보 수정",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceName\": \"수정된 디바이스 이름\",\n  \"location\": \"2층 사무실\",\n  \"spaceId\": \"{{spaceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/devices/{{deviceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "devices",
                "{{deviceId}}"
              ]
            },
            "description": "디바이스 정보를 수정합니다."
          }
        },
        {
          "name": "디바이스 삭제",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/devices/{{deviceId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "devices",
                "{{deviceId}}"
              ]
            },
            "description": "디바이스를 삭제합니다."
          }
        }
      ]
    }
  ],
